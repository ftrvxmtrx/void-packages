# Template file for 'SDL2_mixer'
pkgname=SDL2_mixer
version=2.6.1
revision=1
build_style=gnu-configure
configure_args="--disable-static --disable-music-ogg-stb
 --enable-music-ogg-vorbis --disable-music-mod-modplug-shared
 --disable-music-midi-fluidsynth-shared --disable-music-flac-drflac
 --enable-music-flac-libflac --disable-music-flac-libflac-shared
 --disable-music-ogg-vorbis-shared --disable-music-opus-shared"
hostmakedepends="pkg-config"
makedepends="SDL2-devel libmodplug-devel smpeg2-devel libvorbis-devel
 libflac-devel fluidsynth-devel opusfile-devel"
short_desc="Multi-channel audio mixer library (SDL 2.x)"
maintainer="Sigrid Solveig Haflinud√≥ttir <sigrid@ftrv.se>"
license="BSD-3-Clause"
homepage="https://github.com/libsdl-org/SDL_mixer"
distfiles="${homepage}/releases/download/release-${version}/${pkgname}-${version}.tar.gz"
checksum=bc5c7b85f297e5f3cb34c99c366a4746922fc41365b15fd78a164dda71a861a3

pre_configure() {
	sed -e "/CONFIG_FILE_ETC/s|/etc/timidity.cfg|/etc/timidity++/timidity.cfg|" \
		-e "/DEFAULT_PATH/s|/etc/timidity|/etc/timidity++|" \
		-e "/DEFAULT_PATH2/s|/usr/local/lib/timidity|/usr/lib/timidity|" \
		-i src/codecs/timidity/options.h
}

post_install() {
	vlicense LICENSE.txt
}

SDL2_mixer-devel_package() {
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
	}
}
